<!-- CARD -->
<div class="col-xl-3 col-md-6">
    <div class="card card-h-100 shepherd-badge">
        <div class="card-body">
            <div class="d-flex">
                <div class="flex-grow-1">
                    <p class="text-muted fw-medium">{{ this.title|trans }}</p>
                    {% if not app.user.isSubscriber %}
                        <h4 class="mb-0">{{ this.items|length }} / {{ this.max_count }}</h4>
                    {% else %}
                        <h4 class="mb-0">{{ this.items|length }}</h4>
                    {% endif %}
                </div>

                <div class="flex-shrink-0 align-self-center card-badge">
                    {% if not app.user.isSubscriber %}
                    <div class="progress-bar-circular" data-progress="{{ this.items|length }}">
                        <div class="progress-bar-content avatar-sm rounded-circle mini-stat-icon">
                            <span class="icon rounded-circle">
                                <i class="{{ this.icon }}"></i>
                            </span>
                        </div>
                    </div>
                    {% else %}
                    <div class="bg-primary avatar-sm rounded-circle mini-stat-icon">
                        <span class="icon rounded-circle">
                            <i class="{{ this.icon }}"></i>
                        </span>
                    </div>
                    {% endif %}
                </div>
            </div>
        </div>
    </div>
</div>