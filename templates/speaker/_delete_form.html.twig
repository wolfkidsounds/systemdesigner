<form method="post" action="{{ path('app_speaker_delete', {'id': speaker.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ speaker.id) }}">
    <button class="btn text-danger"><i class="fa-solid fa-trash"></i></button>
</form>