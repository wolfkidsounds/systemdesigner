{% extends 'crud.html.twig' %}

{% block title %}{{ parent() }} | {{ speaker.Manufacturer.name }} - {{ speaker.Name }}{% endblock %}
{% block crud_toolbar %}
<li class="list-inline-item d-lg-inline-block ms-0 m-0">
    <a type="button" href="{{ path('app_speaker_index') }}" class="btn nav-btn">
        <i class="fa-solid fa-arrow-left"></i>
    </a>
</li>
<li class="list-inline-item d-lg-inline-block ms-0 m-0">
    <a type="button" href="{{ path('app_speaker_edit', {'id': speaker.id}) }}" class="btn nav-btn">
        <i class="fa-solid fa-pen"></i>
    </a>
</li>
<li class="list-inline-item d-lg-inline-block ms-0 m-0">
    {{ include('speaker/_delete_form.html.twig') }}
</li>
{% endblock %}

{% block crud_body %}
    <table class="table">
        <tbody>
            <tr>
                <th>ID</th>
                <td>{{ speaker.id }}</td>
            </tr>
            <tr>
                <th>User</th>
                <td>{{ speaker.User.username }}</td>
            </tr>
            <tr>
                <th>Manufacturer</th>
                <td>{{ speaker.Manufacturer.name }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ speaker.Name }}</td>
            </tr>
            <tr>
                <th>RMS Power</th>
                <td>{{ speaker.PowerRMS }}</td>
            </tr>
            <tr>
                <th>Peak Power</th>
                <td>{{ speaker.PowerPeak }}</td>
            </tr>
            <tr>
                <th>Impedance</th>
                <td>{{ speaker.Impedance }}</td>
            </tr>
            <tr>
                <th>Sensitivity (SPL @ 1w, 1m)</th>
                <td>{{ speaker.SPL }}</td>
            </tr>
            <tr>
                <th>Manual</th>
                <td><a href="{{ asset('uploads/manuals/' ~ speaker.Manual) }}" download>Download {{ speaker.Manufacturer.name }} - {{ speaker.Name }} Manual</a></td>
            </tr>
        </tbody>
    </table>
{% endblock %}
