{# Learn how to use Turbo Streams: https://github.com/symfony/ux-turbo#broadcast-doctrine-entities-update #}
{% block create %}
    <turbo-stream action="append" target="limiter">
        <template>
            <div id="{{ 'limiter_' ~ id }}">
                #{{ id }} created
            </div>
        </template>
    </turbo-stream>
    {% endblock %}
    
    {% block update %}
    <turbo-stream action="update" target="limiter_{{ id }}">
        <template>
            #{{ id }} updated
        </template>
    </turbo-stream>
    {% endblock %}
    
    {% block remove %}
    <turbo-stream action="remove" target="limiter_{{ id }}"></turbo-stream>
    {% endblock %}
    