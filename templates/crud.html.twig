{% extends 'content.html.twig' %}
{% block body %}
    <div class="row">
        <div class="col-lg-12">
            <div id="crud" class="card">
                <div class="card-header border-0">
                    <div class="d-flex align-items-center">
                        <h5 class="card-title mb-0 flex-grow-1">{{ crud_title|trans }}</h5>
                        <div class="flex-shrink-0">
                            <div class="d-flex flex-wrap gap-2">
                                <ul class="list-inline text-end mb-0">
                                    {% block crud_toolbar %}{% endblock %}
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="card-body">
                    {% block crud_body %}{% endblock %}
                    
                    {% block crud_pagination %}{% endblock %}
                </div>
            </div>
        </div>
    </div>                               
{% endblock %}