{% extends 'base.html.twig' %}

{% block title %}Processor{% endblock %}

{% block page_content %}
    <div class="col-lg-12">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title mb-4">{{ title }}</h4>
                <div class="table-responsive">
                    <table class="table align-middle table-nowrap mb-0">
                        <thead class="table-light">
                            <tr>
                                <th class="align-middle">Id</th>
                                <th class="align-middle">Brand</th>
                                <th class="align-middle">Name</th>
                                <th class="align-middle">Inputs</th>
                                <th class="align-middle">Outputs</th>
                                <th class="align-middle">Offset</th>
                                <th class="align-middle">actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for processor in processors %}
                            <tr>
                                <td><a class="text-body fw-bold" href="{{ path('app_processor_show', {'id': processor.id}) }}">{{ processor.id }}</a></td>
                                <td>{{ processor.Brand }}</td>
                                <td>{{ processor.Name }}</td>
                                <td>{{ processor.ChannelsInput }}</td>
                                <td>{{ processor.ChannelsOutput }}</td>
                                <td>{{ processor.OutputOffset }}</td>
                                <td>
                                    <a href="{{ path('app_processor_show', {'id': processor.id}) }}"><i class="fa-solid fa-eye"></i>View</a>
                                    <a href="{{ path('app_processor_edit', {'id': processor.id}) }}"><i class="fa-solid fa-pen"></i>Edit</a>
                                </td>
                            </tr>
                        {% else %}
                            <tr>
                                <td colspan="7">no records found</td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% set toolbar_button %}
    <a href="{{ path('app_processor_new') }}" class="btn nav-btn">
        <i class="fa-solid fa-plus"></i>
    </a>
{% endset %}