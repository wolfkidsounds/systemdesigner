{% extends 'content.html.twig' %}

{% block title %}{{ parent() }} | FAQ{% endblock %}

{% block body %}
    <div class="card">
        <div class="card-body">
            <div id="faq" class="accordion">

                {% if faqs %}
                    {% for faq in faqs %}
                        {% include 'pages/faq/_accordion.html.twig' %}
                    {% endfor %}
                {% else %}
                    <p class="text-center">{{ "We couldn't find any faq entries"|trans }}...</p>
                {% endif %}

            </div>
        </div>
    </div>
{% endblock %}
