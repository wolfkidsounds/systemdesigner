    title: 'Amplifiers',
    base_path: 'app_amplifier'
} %}

{% set crud = {
    toolbar: true,
    add: true,
    items: amplifiers,
    table: {
        fields: {
            Manufacturer: 'Manufacturer',
            Name: 'Name',
            'Power @ 16Ω': 'Power16',
