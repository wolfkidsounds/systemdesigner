{{ form_start(form) }}
<div class="d-flex flex-column overflow-hidden">
    <div class="row shepherd-general">
        <h5> {{ 'General Information'|trans }}</h5>
        <div class="col-sm">
            {{ form_row(form.Manufacturer, {
                'attr': {
                    'class': 'form-select',
                },
                'placeholder': 'Select Manufacturer',
            }) }}
        </div>
        <div class="col-sm">
            {{ form_row(form.Name) }}
        </div>
    </div>

    <div class="divider seperator mb-3"><hr></div>

    <div class="row shepherd-electrical">
        <h5> {{ 'General Parameters'|trans }}</h5>
        <div class="row">
            <div class="col-sm mb-3">
                {{ form_label(form.NominalImpedance, 'Nominal Impedance', {'label_attr': {'class': 'form-label required'}}) }}
                <div class="input-group">
                    {{ form_widget(form.NominalImpedance, {'attr': {'inputmode': 'decimal', 'class': 'form-control'}}) }}
                    <span class="input-group-text">Ω</span>
                </div>
            </div>
            <div class="col-sm mb-3">
                {{ form_label(form.PowerRMS, 'RMS Power', {'label_attr': {'class': 'form-label required'}}) }}
                <div class="input-group">
                    {{ form_widget(form.PowerRMS, {'attr': {'inputmode': 'decimal', 'class': 'form-control'}}) }}
                    <span class="input-group-text">Watt</span>
                </div>
            </div>
        </div>
        </div class="row">
            <div class="col-sm mb-3">
                {{ form_label(form.Sensitivity,'', {'label_attr': {'class': 'form-label required'}}) }}
                <div class="input-group">
                    {{ form_widget(form.Sensitivity, {'attr': {'inputmode': 'decimal', 'class': 'form-control'}}) }}
                    <span class="input-group-text">dBSPL</span>
                </div>
            </div>
        </div>
    </div>

    <div class="divider seperator mb-3"><hr></div>

    <div class="row shepherd-tsp">
        <h5> {{ 'Electrical Parameters'|trans }}</h5>
        
        <div class="col-sm mb-3">
            {{ form_label(form.Fs, '', {'label_attr': {'class': 'form-label required'}}) }}
            <div class="input-group">
                {{ form_widget(form.Fs, {'attr': {'inputmode': 'decimal', 'class': 'form-control'}}) }}
                <span class="input-group-text">Hz</span>
            </div>
        </div>
        <div class="col-sm mb-3">
            {{ form_label(form.Re, '', {'label_attr': {'class': 'form-label required'}}) }}
            <div class="input-group">
                {{ form_widget(form.Re, {'attr': {'inputmode': 'decimal', 'class': 'form-control'}}) }}
                <span class="input-group-text">Ω</span>
            </div>
        </div>
        <div class="col-sm mb-3">
            {{ form_label(form.Le, '', {'label_attr': {'class': 'form-label required'}}) }}
            <div class="input-group">
                {{ form_widget(form.Le, {'attr': {'inputmode': 'decimal', 'class': 'form-control'}}) }}
                <span class="input-group-text">mH</span>
            </div>
        </div>
        <div class="col-sm mb-3">
            {{ form_label(form.Qes, '', {'label_attr': {'class': 'form-label required'}}) }}
            <div class="input-group">
                {{ form_widget(form.Qes, {'attr': {'inputmode': 'decimal', 'class': 'form-control'}}) }}
                <span class="input-group-text"></span>
            </div>
        </div>
    </div>

    <div class="divider seperator mb-3"><hr></div>

    <div class="row shepherd-tsp">
        <h5> {{ 'Mechanical Parameters'|trans }}</h5>

        <div class="row">
            <div class="col-sm mb-3">
                {{ form_label(form.Qms, '', {'label_attr': {'class': 'form-label required'}}) }}
                <div class="input-group">
                    {{ form_widget(form.Qms, {'attr': {'inputmode': 'decimal', 'class': 'form-control'}}) }}
                    <span class="input-group-text"></span>
                </div>
            </div>
            <div class="col-sm mb-3">
                {{ form_label(form.Vas, '', {'label_attr': {'class': 'form-label required'}}) }}
                <div class="input-group">
                    {{ form_widget(form.Vas, {'attr': {'inputmode': 'decimal', 'class': 'form-control'}}) }}
                    <span class="input-group-text">liters</span>
                </div>
            </div>
            <div class="col-sm mb-3">
                {{ form_label(form.Sd, '', {'label_attr': {'class': 'form-label required'}}) }}
                <div class="input-group">
                    {{ form_widget(form.Sd, {'attr': {'inputmode': 'decimal', 'class': 'form-control'}}) }}
                    <span class="input-group-text">cm²</span>
                </div>
            </div>
            <div class="col-sm mb-3">
                {{ form_label(form.Xmax, '', {'label_attr': {'class': 'form-label required'}}) }}
                <div class="input-group">
                    {{ form_widget(form.Xmax, {'attr': {'inputmode': 'decimal', 'class': 'form-control'}}) }}
                    <span class="input-group-text">mm</span>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-sm mb-3">
                {{ form_label(form.Mms, '', {'label_attr': {'class': 'form-label required'}}) }}
                <div class="input-group">
                    {{ form_widget(form.Mms, {'attr': {'inputmode': 'decimal', 'class': 'form-control'}}) }}
                    <span class="input-group-text">g</span>
                </div>
            </div>
            <div class="col-sm mb-3">
                {{ form_label(form.Mmd, '', {'label_attr': {'class': 'form-label required'}}) }}
                <div class="input-group">
                    {{ form_widget(form.Mmd, {'attr': {'inputmode': 'decimal', 'class': 'form-control'}}) }}
                    <span class="input-group-text">g</span>
                </div>
            </div>
            <div class="col-sm mb-3">
                {{ form_label(form.Cms, '', {'label_attr': {'class': 'form-label required'}}) }}
                <div class="input-group">
                    {{ form_widget(form.Cms, {'attr': {'inputmode': 'decimal', 'class': 'form-control'}}) }}
                    <span class="input-group-text">mm/N</span>
                </div>
            </div>
            <div class="col-sm mb-3">
                {{ form_label(form.Rms, '', {'label_attr': {'class': 'form-label required'}}) }}
                <div class="input-group">
                    {{ form_widget(form.Rms, {'attr': {'inputmode': 'decimal', 'class': 'form-control'}}) }}
                    <span class="input-group-text">kg/s</span>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-sm mb-3">
                {{ form_label(form.Bl, '', {'label_attr': {'class': 'form-label required'}}) }}
                <div class="input-group">
                    {{ form_widget(form.Bl, {'attr': {'inputmode': 'decimal', 'class': 'form-control'}}) }}
                    <span class="input-group-text">N/A</span>
                </div>
            </div>
        </div>
    </div>

    <div class="divider seperator mb-3"><hr></div>

    <div class="row shepherd-tsp">
        <h5> {{ 'Mechanical Parameters'|trans }}</h5>

        <div class="row">
            <div class="col-sm mb-3">
                {{ form_label(form.Qts, '', {'label_attr': {'class': 'form-label required'}}) }}
                <div class="input-group">
                    {{ form_widget(form.Qts, {'attr': {'inputmode': 'decimal', 'class': 'form-control'}}) }}
                    <span class="input-group-text"></span>
                </div>
            </div>
            <div class="col-sm mb-3">
                {{ form_label(form.Vd, '', {'label_attr': {'class': 'form-label required'}}) }}
                <div class="input-group">
                    {{ form_widget(form.Vd, {'attr': {'inputmode': 'decimal', 'class': 'form-control'}}) }}
                    <span class="input-group-text">liters</span>
                </div>
            </div>
            <div class="col-sm mb-3">
                {{ form_label(form.VoiceCoilDiameter, '', {'label_attr': {'class': 'form-label required'}}) }}
                <div class="input-group">
                    {{ form_widget(form.VoiceCoilDiameter, {'attr': {'inputmode': 'decimal', 'class': 'form-control'}}) }}
                    <span class="input-group-text">cm²</span>
                </div>
            </div>
            <div class="col-sm mb-3">
                {{ form_label(form.WindingMaterial, '', {'label_attr': {'class': 'form-label required'}}) }}
                <div class="input-group">
                    {{ form_widget(form.WindingMaterial, {'attr': {'inputmode': 'decimal', 'class': 'form-control'}}) }}
                    <span class="input-group-text">mm</span>
                </div>
            </div>
        </div>
    </div>

    <div class="divider seperator mb-3"><hr></div>
    <div class="row shepherd-manual">
        {{ form_row(form.Datasheet) }}
    </div>
    <div class="divider seperator mb-3"><hr></div>

    <div class="row p-3">
        <button class="btn btn-primary shepherd-save">{{ button_label|default('Save') }}</button>
    </div>


</div>
