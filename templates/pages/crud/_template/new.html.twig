{% extends 'crud.html.twig' %}

{% block title %}{{ parent() }} | {{ page.title|trans }}{% endblock %}

{% block crud_toolbar %}
    {% if crud.toolbar is defined %}
        {{ component('CrudToolbar', {
            back: true,
            path: page.base_path
        }) }}
    {% endif %}
{% endblock %}

{% block crud_body %}
    {{ component('CrudForm', {
        form: crud.form,
    }) }}
{% endblock %}