<!-- CARD -->
<div class="col">
    <div class="card card-h-100">
        <div class="card-body {% if not app.user.isSubscriber %} bg-primary {% endif %} rounded">
            <div class="d-flex justify-content-center flex-column">
                <div class="row card-header text-center m-0 p-3 rounded">
                    <p class="fw-medium fs-3 mb-0">Free</p>
                    <p class="mb-0">$0 / Month</p>
                </div>

                <div class="row card-features text-center mt-3">
                    <p class="text-muted">{{ maxCount }} Manufacturers</p>
                    <p class="text-muted">{{ maxCount }} Processors</p>
                    <p class="text-muted">{{ maxCount }} Amplifiers</p>
                    <p class="text-muted">{{ maxCount }} Speakers</p>
                    <p class="text-muted">{{ maxCount }} Limiters</p>
                </div>

                <div class="row card-footer text-center m-0 mt-3 p-0 bg-transparent">
                    {% if not app.user.isSubscriber %}
                        <a href="#" class="btn">Current Plan</a>
                    {% else %}
                        <!-- Use action="/create-checkout-session.php" if your server is PHP based. -->
                        <form action="{{ path('app_payment_checkout') }}" method="POST">
                            <button type="submit" class="btn btn-primary w-100">Get Plan</button>
                        </form>
                    {% endif %}
                </div>
            </div>
        </div>
    </div>
</div>