{% extends 'crud.html.twig' %}

{% block title %}{{ parent() }} | {{ 'Manufacturer'|trans }}{% endblock %}

{% block crud_toolbar %}
    <li class="list-inline-item d-lg-inline-block ms-0 m-0 shepherd-new">
        <a type="button" href="{{ path('app_manufacturer_new') }}" class="btn nav-btn">
            <i class="fa-solid fa-plus"></i>
        </a>
    </li>
{% endblock %}
{% block crud_body %}
<table class="table align-middle table-nowrap mb-0" data-tables='data-tables'>
    <thead class="">
        <tr>
            <th class="sort text-uppercase align-middle">ID</th>
            <th class="sort text-uppercase align-middle">{{ 'Name'|trans }}</th>
            <th class="sort text-uppercase align-middle">{{ 'Actions'|trans }}</th>
        </tr>
    </thead>
    <tbody id="search-table" class="list form-check-all">
        {% for manufacturer in manufacturers %}
        <tr>
            <td class="id">
                <a class="text-body fw-bold" href="{{ path('app_manufacturer_show', {'id': manufacturer.id}) }}">{{ manufacturer.id }}</a>
            </td>
            <td class="name">{{ manufacturer.Name }}</td>
            <td class="actions d-flex gap-2">
                <a href="{{ path('app_manufacturer_show', {'id': manufacturer.id}) }}"><i class="fa-solid fa-eye"></i></a>
                {% if manufacturer.user == app.user %}
                    <a href="{{ path('app_manufacturer_edit', {'id': manufacturer.id}) }}"><i class="fa-solid fa-pen"></i></a>                    
                {% endif %}
            </td>
        </tr>
        {% endfor %}
    </tbody>
</table>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    {{ encore_entry_script_tags('crud') }}
{% endblock %}

