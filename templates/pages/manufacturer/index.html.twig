{% extends 'crud.html.twig' %}

{% block title %}{{ parent() }} | {{ 'Manufacturer'|trans }}{% endblock %}

{% block crud_toolbar %}
    <li class="list-inline-item d-lg-inline-block ms-0 m-0">
        <div class="dropdown dropstart">
            <button class="btn nav-btn dropdown-toggle" type="button" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                <i class="fa-solid fa-magnifying-glass"></i>
            </button>
            <div class="dropdown-menu p-0 dropdown-menu-md">
                <div class="search-box p-1">
                    <input type="text" class="form-control bg-light border-0" id="search-input" placeholder="{{ 'Search'|trans }}..">
                </div>
            </div>
        </div>
    </li>
    <li class="list-inline-item d-lg-inline-block ms-0 m-0">
        <a type="button" href="{{ path('app_manufacturer_new') }}" class="btn nav-btn">
            <i class="fa-solid fa-plus"></i>
        </a>
    </li>
{% endblock %}
{% block crud_body %}
<table class="table align-middle table-nowrap mb-0">
    <thead class="">
        <tr>
            <th class="sort text-uppercase align-middle" data-sort="id">ID</th>
            <th class="sort text-uppercase align-middle" data-sort="name">{{ 'Name'|trans }}</th>
            <th class="sort text-uppercase align-middle" data-sort="actions">{{ 'Actions'|trans }}</th>
        </tr>
    </thead>
    <tbody id="search-table" class="list form-check-all"><tr>
        {% for manufacturer in manufacturers %}
        <tr>
            <td class="id"><a class="text-body fw-bold" href="{{ path('app_manufacturer_show', {'id': manufacturer.id}) }}">{{ manufacturer.id }}</a></td>
            <td class="name">{{ manufacturer.Name }}</td>
            <td class="actions d-flex gap-2">
                <a href="{{ path('app_manufacturer_show', {'id': manufacturer.id}) }}"><i class="fa-solid fa-eye"></i></a>
                {% if manufacturer.user == app.user %}
                    <a href="{{ path('app_manufacturer_edit', {'id': manufacturer.id}) }}"><i class="fa-solid fa-pen"></i></a>                    
                {% endif %}
            </td>
        </tr>
        {% else %}
        <tr>
            <td colspan="7">{{ 'We could not find any manufacturers.'|trans }}</td>
        </tr>
        {% endfor %}
    </tbody>
</table>
{% endblock %}