{% extends 'crud.html.twig' %}

{% block title %}{{ parent() }} | Limiter{% endblock %}
{% block crud_toolbar %}
<li class="list-inline-item d-lg-inline-block ms-0 m-0">
    <a type="button" href="{{ path('app_limiter_index') }}" class="btn nav-btn">
        <i class="fa-solid fa-arrow-left"></i>
    </a>
</li>
<li class="list-inline-item d-lg-inline-block ms-0 m-0">
    <a type="button" href="{{ path('app_limiter_edit', {'id': limiter.id}) }}" class="btn nav-btn">
        <i class="fa-solid fa-pen"></i>
    </a>
</li>
<li class="list-inline-item d-lg-inline-block ms-0 m-0">
    {{ include('pages/limiter/_delete_form.html.twig') }}
</li>
{% endblock %}

{% block crud_body %}
    <table class="table">
        <tbody>
            <tr>
                <th>ID</th>
                <td>{{ limiter.id }}</td>
            </tr>
            <tr>
                <th>User</th>
                <td>{{ limiter.User.username }}</td>
            </tr>
            <tr>
                <th>Processor</th>
                <td>{{ limiter.Processor.Manufacturer.name }} - {{ limiter.Processor.name }}</td>
            </tr>
            <tr>
                <th>Amplifier</th>
                <td>{{ limiter.Amplifier.Manufacturer.name }} - {{ limiter.Amplifier.name }}</td>
            </tr>
            <tr>
                <th>Speaker</th>
                <td>{{ limiter.Speaker.Manufacturer.name }} - {{ limiter.Speaker.name }}</td>
            </tr>
            <hr>
            <tr>
                <th>Vrms</th>
                <td>{{ limiter.Vrms }}</td>
            </tr>
            <tr>
                <th>Limiter Value</th>
                <td>{{ limiter.VrmsValue }}</td>
            </tr>
            <tr>
                <th>Attack Time</th>
                <td>{{ limiter.VrmsAttack }}</td>
            </tr>
            <tr>
                <th>Release Time</th>
                <td>{{ limiter.VrmsRelease }}</td>
            </tr>
            <tr>
                <th>Vpeak</th>
                <td>{{ limiter.Vpeak }}</td>
            </tr>
            <tr>
                <th>Limiter Value</th>
                <td>{{ limiter.VpeakValue }}</td>
            </tr>
            <tr>
                <th>Attack Time</th>
                <td>{{ limiter.VpeakAttack }}</td>
            </tr>
            <tr>
                <th>Release Time</th>
                <td>{{ limiter.VpeakRelease }}</td>
            </tr>            
        </tbody>
    </table>
{% endblock %}