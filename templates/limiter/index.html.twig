{% extends 'crud.html.twig' %}

{% block title %}{{ parent() }} | Limiters{% endblock %}
{% block crud_toolbar %}
    <li class="list-inline-item d-lg-inline-block ms-0 m-0">
        <button type="button" class="btn nav-btn">
            <i class="fa-solid fa-magnifying-glass"></i>
        </button>
    </li>
    <li class="list-inline-item d-lg-inline-block ms-0 m-0">
        <a type="button" href="{{ path('app_limiter_new') }}" class="btn nav-btn">
            <i class="fa-solid fa-plus"></i>
        </a>
    </li>
{% endblock %}
{% block crud_body %}
<table class="table align-middle table-nowrap mb-0">
    <thead class="">
        <tr>
            <th class="sort text-uppercase align-middle" data-sort="id">ID</th>
            <th class="sort text-uppercase align-middle" data-sort="processor">Processor</th>
            <th class="sort text-uppercase align-middle" data-sort="amplifier">Amplifier</th>
            <th class="sort text-uppercase align-middle" data-sort="speaker">Speaker</th>
            <th class="sort text-uppercase align-middle" data-sort="actions">Actions</th>
        </tr>
    </thead>
    <tbody class="list form-check-all"><tr>
        {% for limiter in limiters %}
        <tr>
            <td class="id"><a class="text-body fw-bold" href="{{ path('app_limiter_show', {'id': limiter.id}) }}">{{ limiter.id }}</a></td>
            <td class="processor">{{ limiter.Processor.Manufacturer }} - {{ limiter.Processor.Name }}</td>
            <td class="amplifier">{{ limiter.Amplifier.Manufacturer }} - {{ limiter.Amplifier.Name }}</td>
            <td class="speaker">{{ limiter.Speaker.Manufacturer }} - {{ limiter.Speaker.Name }}</td>
            <td class="actions d-flex gap-2">
                <a href="{{ path('app_limiter_show', {'id': limiter.id}) }}"><i class="fa-solid fa-eye"></i></a>
                <a href="{{ path('app_limiter_edit', {'id': limiter.id}) }}"><i class="fa-solid fa-pen"></i></a>
            </td>
        </tr>
        {% else %}
        <tr>
            <td colspan="7">We could not find any limiters.</td>
        </tr>
        {% endfor %}
    </tbody>
</table>
{% endblock %}
{% block crud_pagination %}
<div class="d-flex justify-content-end mt-2">
    <div class="pagination-wrap hstack gap-2" style="display: flex;">
        <a class="page-item pagination-prev disabled" href="#">
            Previous
        </a>
        <ul class="pagination listjs-pagination mb-0">
            <li class="active">
                <a class="page" href="#" data-i="1" data-page="8">1</a>
            </li>
            <li>
                <a class="page" href="#" data-i="2" data-page="8">2</a>
            </li>
        </ul>
        <a class="page-item pagination-next" href="#">
            Next
        </a>
    </div>
</div>
{% endblock %}